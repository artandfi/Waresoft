@model Query

@{
    ViewData["Title"] = "Результат";
}

<h1>Результат</h1>
<hr />

@if (Model.QueryId.Equals("S1"))
{
    if (string.IsNullOrEmpty(Model.Error))
    {
        <p style="font-size:20px">
            <b>Середня ціна продуктів розробника @Model.DevName:</b> @decimal.Round(Model.AvgPrice, 2, MidpointRounding.AwayFromZero)
        </p>
    }
    else
    {
        <p style="font-size:20px">
            Під час виконання запиту сталася помилка. Будь ласка, спробуйте ще раз.
        </p>
    }
}
else if (Model.QueryId.Equals("S2"))
{
    if (string.IsNullOrEmpty(Model.Error))
    {
        <p style="font-size:20px">
            <b>Користувачі, що придбали хоча б один продукт розробника @Model.DevName</b>
        </p>
        <table class="table">
            <thead>
                <tr>
                    <th>
                        Ім'я
                    </th>
                    <th>
                        Прізвище
                    </th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < Model.CustNames.Count; i++)
                {
                    <tr>
                        <td>
                            @Model.CustNames[i]
                        </td>
                        <td>
                            @Model.CustSurnames[i]
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p style="font-size:20px">
            Під час виконання запиту сталася помилка. Будь ласка, спробуйте ще раз.
        </p>
    }

}



<table>
    <tr>
        <td>
            <form method="get" asp-controller="Queries" asp-action="Index">
                <input type="submit" class="btn btn-primary" value="Назад до запитів" />
            </form>
        </td>
        <td></td>
        <td></td>
        <td></td>
        <td>
            <form method="get" asp-controller="Home" asp-action="Index">
                <input type="submit" class="btn btn-primary" value="На головну" />
            </form>
        </td>
    </tr>
</table>


<div class="modal fade" id="error" tabindex="-1" role="alertdialog" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Помилка</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body" id="errorText">
                @Model.Error
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" data-dismiss="modal">ОК</button>
            </div>
        </div>
    </div>
</div>

@section scripts
{
    <script>
        window.addEventListener("load", function () {
            if ('@Model.ErrorFlag' == 1) {
                $("#error").modal();
            }
        });
    </script>
}
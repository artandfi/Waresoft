@model Query

@{
    ViewData["Title"] = "Результат";
}

<h1>Результат</h1>
<hr />

@if (string.IsNullOrEmpty(Model.Error))
{
    @if (Model.QueryId.Equals("S1"))
    {
        <p style="font-size:20px">
            <b>Середня ціна продуктів розробника @Model.DevName:</b> @decimal.Round(Model.AvgPrice, 2, MidpointRounding.AwayFromZero)
        </p>
    }
    else if (Model.QueryId.Equals("S2"))
    {
        <p style="font-size:20px">
            <b>Покупці, що придбали хоча б один продукт розробника @Model.DevName</b>
        </p>
        <table class="table">
            <thead>
                <tr>
                    <th>
                        Ім'я
                    </th>
                    <th>
                        Прізвище
                    </th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < Model.CustNames.Count; i++)
                {
                    <tr>
                        <td>
                            @Model.CustNames[i]
                        </td>
                        <td>
                            @Model.CustSurnames[i]
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else if (Model.QueryId.Equals("S3"))
    {
        <p style="font-size:20px">
            <b>Назви та ціни всіх програмних продуктів усіх розробників із країни @Model.CountryName</b>
        </p>
        <table class="table">
            <thead>
                <tr>
                    <th>
                        Назва
                    </th>
                    <th>
                        Ціна
                    </th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < Model.ProdNames.Count; i++)
                {
                    <tr>
                        <td>
                            @Model.ProdNames[i]
                        </td>
                        <td>
                            @decimal.Round(Model.ProdPrices[i], 2, MidpointRounding.AwayFromZero)
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else if (Model.QueryId.Equals("S4"))
    {
        <p style="font-size:20px">
            <b>Імена розробників усіх програмних продуктів, придбаних покупцем з ім'ям @Model.CustName, прізвищем @Model.CustSurname та email-ом @Model.CustEmail</b>
        </p>
        <table class="table">
            <thead>
                <tr>
                    <th>
                        Ім'я/назва
                    </th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < Model.DevNames.Count; i++)
                {
                    <tr>
                        <td>
                            @Model.DevNames[i]
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else if (Model.QueryId.Equals("S5"))
    {
        <p style="font-size:20px">
            <b>Імена розробників, які продають продукти ціною не @Model.Price у.о.</b>
        </p>
        <table class="table">
            <thead>
                <tr>
                    <th>
                        Ім'я/назва
                    </th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < Model.DevNames.Count; i++)
                {
                    <tr>
                        <td>
                            @Model.DevNames[i]
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else if (Model.QueryId.Equals("S6"))
    {
        <p style="font-size:20px">
            <b>Імена розробників, які не продають продукти з назвою @Model.ProdName</b>
        </p>
        <table class="table">
            <thead>
                <tr>
                    <th>
                        Ім'я/назва
                    </th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < Model.DevNames.Count; i++)
                {
                    <tr>
                        <td>
                            @Model.DevNames[i]
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else if (Model.QueryId.Equals("A1"))
    {
        <p style="font-size:20px">
            <b>Назви країн, розробники з яких продають програмні продукти принаймні за всіма тими цінами, що й розробник із кодом @Model.DevId</b>
        </p>
        <table class="table">
            <thead>
                <tr>
                    <th>
                        Назва
                    </th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < Model.CountryNames.Count; i++)
                {
                    <tr>
                        <td>
                            @Model.CountryNames[i]
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else if (Model.QueryId.Equals("A2"))
    {
        <p style="font-size:20px">
            <b>Прізвища покупців, які придбали точно ті ж самі програмні продукти, що й покупець з email @Model.CustEmail</b>
        </p>
        <table class="table">
            <thead>
                <tr>
                    <th>
                        Прізвище
                    </th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < Model.CustSurnames.Count; i++)
                {
                    <tr>
                        <td>
                            @Model.CustSurnames[i]
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else if (Model.QueryId.Equals("A3"))
    {
        <p style="font-size:20px">
            <b>Прізвища та email-и покупців з іменем @Model.CustName, які придбали всі наявні програмні продукти</b>
        </p>
        <table class="table">
            <thead>
                <tr>
                    <th>
                        Прізвище
                    </th>
                    <th>
                        Email
                    </th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < Model.CustSurnames.Count; i++)
                {
                    <tr>
                        <td>
                            @Model.CustSurnames[i]
                        </td>
                        <td>
                            @Model.CustEmails[i]
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else if (Model.QueryId.Equals("T1"))
    {

    }
    else if (Model.QueryId.Equals("T2"))
    {

    }
}
else
{
    <p style="font-size:20px">
        Результат запиту порожній.
        <br />
        Будь ласка, спробуйте ще раз з іншим параметром.
    </p>
}

<table>
    <tr>
        <td>
            <form method="get" asp-controller="Queries" asp-action="Index">
                <input type="submit" class="btn btn-primary" value="Назад до запитів" />
            </form>
        </td>
        <td></td>
        <td></td>
        <td></td>
        <td>
            <form method="get" asp-controller="Home" asp-action="Index">
                <input type="submit" class="btn btn-primary" value="На головну" />
            </form>
        </td>
    </tr>
</table>


<div class="modal fade" id="error" tabindex="-1" role="alertdialog" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Повідомлення</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body" id="errorText">
                @Model.Error
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" data-dismiss="modal">ОК</button>
            </div>
        </div>
    </div>
</div>

@section scripts
{
    <script>
        window.addEventListener("load", function () {
            if ('@Model.ErrorFlag' == 1) {
                $("#error").modal();
            }
        });
    </script>
}